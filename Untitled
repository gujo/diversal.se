      - workerType=copyWorker
      - environment=dev
      - component=common-exec-worker
      - application=common-service
      - project=vp-assetmanagement
    volumes:
      - /nfs:/nfs
    expose:
      - "8080"
    ports:
      - "8080:8080"
    logging:
      options:
        max-size: "100m"

